<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#010101</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="bottom_nav_view_text_style_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        </style>

    <style name="bottom_nav_view_text_style_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        </style>

    <style name="PlayerTheme"  parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
