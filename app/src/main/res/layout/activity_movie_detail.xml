<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        tools:ignore="ScrollViewSize">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:textColor="#dddddd"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/movie_title"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#777777"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/movie_title"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="15dp"
            android:textColor="#777777"
            android:textSize="11sp" />
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#771f1a24"
            android:layout_below="@id/year">
            <ImageView
                android:id="@+id/poster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"/>
            <LinearLayout
                android:id="@+id/genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/poster"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/description"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/genres"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="11dp"
                android:layout_toLeftOf="@id/poster"
                android:clickable="false"
                android:fontFamily="sans-serif-light"
                android:inputType="textMultiLine"
                android:textColor="#aaaaaa"
                android:textSize="12sp"
                android:maxLines="20"
                tools:ignore="TextViewEdits" />
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rating_bar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginVertical="40dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#121212"
            app:cardCornerRadius="10dp"
            android:elevation="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                >

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/rating"
                    android:layout_marginTop="9dp"
                    android:foregroundGravity="center_vertical"
                    app:srcCompat="@drawable/ic_star" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@id/youtube"
                    android:layout_marginEnd="50dp"
                    android:text="0.0"
                    android:textColor="#FFC850"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_youtube" />
                <ImageView
                    android:id="@+id/imdb"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@id/youtube"
                    android:background="@drawable/ic_imdb" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/Torrent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:layout_alignParentStart="true"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#dddddd"
            android:text="Torrents"
            android:textStyle="italic"
            />
        <RelativeLayout
            android:id="@+id/container720"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Torrent_title"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:background="#232323">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download in 720p"
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:textSize="12sp"
                android:textColor="#aaaaaa"/>
            <ImageView
                android:id="@+id/download720"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_download2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/container1080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container720"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:background="#232323">
            <TextView
                android:id="@+id/text1080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Download in 1080p"
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:textSize="12sp"
                android:textColor="#aaaaaa"/>
            <ImageView
                android:id="@+id/download1080"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_download2"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/Recommendations_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container1080"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#dddddd"
            android:text="More Like This"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendations_list"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="horizontal"
            android:layout_marginVertical="6dp"
            android:layout_below="@id/Recommendations_title"
            android:background="#171717"
            />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>